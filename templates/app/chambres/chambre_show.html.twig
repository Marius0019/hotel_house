{% extends 'base.html.twig' %}

{% block title %}{{chambre.titre}}{% endblock %}

{% block body %}


<div class="w-100 position-relative ">
    <div class="">
        <video autoplay loop muted width="100%">
            <source src="{{ asset('video/video_2.mp4')}}" type="video/mp4">
        </video>
        
        <div class="container ">
<div class=" m-4 ">
{# <div class="col-8 "> #}
    <div class="card">
      <img src="{{ asset('uploads/images/' ~ chambre.photo) }}" class="card-img-top" alt=""/>
      <div class="card-body">
        <h5 class="card-title text">{{chambre.titre}}</h5>
        <p class="card-text">
            {{chambre.descriptionLongue|raw}}
        </p>
       
      </div>
    {# </div> #}
  </div>
</div>

  

<div class="container mt-3">
    <h1 class="text-center my-4">Réserver</h1>
</div>

{{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}

{{ form_row(form.date_arrivee) }}
{{ form_row(form.date_depart) }}

<br>

<h2>Saississez vos coordonnées</h2>

<div class="col-md-10 mx-auto text-darktext-white card p-5">

    <div class="row g-1">
        <div class="col">
          <!-- Name input -->
          <div class="form-outline">
              {{ form_row(form.nom) }}
            
          </div>
        </div>
        <div class="col">
          <!-- Email input -->
          <div class="form-outline">
            
            {{ form_row(form.prenom) }}
          </div>
        </div>
      </div>
      
      <hr />
      
      <!-- Gutter g-5 -->
      <div class="row g-5">
        <div class="col">
          <!-- Name input -->
          <div class="form-outline">
           {{ form_row(form.telephone) }}
          </div>
        </div>
        <div class="col">
          <!-- Email input -->
          <div class="form-outline">
           {{ form_row(form.email) }}
          </div>
        </div>
      </div>
		
        <div class="text-end mt-4">
		    <button type="submit" class="btn btn-outline-warning">Valider ma réservation</button>
        </div>
		{{ form_end(form) }}

    </div>
</div>
</div>
{% endblock %}